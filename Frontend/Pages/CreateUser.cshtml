@page
@model CreateUserModel

@{
    ViewData["Title"] = "Create New Account";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="text-center">
    <form method="post">
        <div class="form-group pt-3">
            <label asp-for="UserCreator.Email">Email</label>
            <input asp-for="UserCreator.Email" class="form-control form-control-lg" placeholder="Email" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.Password">Password</label>
            <input type="password" asp-for="UserCreator.Password" class="form-control form-control-lg" placeholder="Password" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.FirstName">First name</label>
            <input asp-for="UserCreator.FirstName" class="form-control form-control-lg" placeholder="First name" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.LastName">Last name</label>
            <input asp-for="UserCreator.LastName" class="form-control form-control-lg" placeholder="Last name" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.PhoneNumber">Phone number</label>
            <input asp-for="UserCreator.PhoneNumber" class="form-control form-control-lg" placeholder="Phone number" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.ProfilePicture">Profile picture</label>
            <input asp-for="UserCreator.ProfilePicture" class="form-control form-control-lg" placeholder="Profile picture" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="UserCreator.IsServiceProvider">I will be working for others</label>
            <input asp-for="UserCreator.IsServiceProvider">
        </div>
        <button type="submit" class="btn btn-lg btn-success mt-5">Create Account</button>
    </form>
</div>