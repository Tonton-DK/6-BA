@page
@using ClassLibrary.Classes
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="text-center">
    <form method="post">
        <span style="font-family: Lobster, cursive; font-size: 1.8rem;">Looking for someone to</span>
        <div class="form-group pt-3">
            <select asp-for="SelectedCategory.Id" asp-items="Model.Categories" class="text-center form-select form-select-lg">
                <option value="default">Select A Category</option>
            </select>
        </div>
        <span style="font-family: Lobster, cursive; font-size: 1.8rem;">We know a guy!</span>
        <br/>
        <button type="submit" class="btn btn-lg btn-success mt-5">Find a Guy!</button>
    </form>
</div>