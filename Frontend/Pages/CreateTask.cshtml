@page
@model CreateJobModel

@{
    ViewData["Title"] = "Create Task";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="text-center">
    <form method="post">
        <div class="form-group pt-3">
            <label asp-for="Job.Title">Title</label>
            <input asp-for="Job.Title" class="form-control form-control-lg" placeholder="Write a short title" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="Job.Deadline">Deadline</label>
            <input asp-for="Job.Deadline" class="form-control form-control-lg" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="Job.Category.Id">Category</label>
            <select asp-for="Job.Category.Id"
                    asp-items="Model.Categories" class="form-select form-select-lg" required>
            <option value="default">Select A Category</option>
            </select>
        </div>
        <div class="form-group input-multiple pt-3">
            <label asp-for="Job.Location">Task Location</label>
            <input asp-for="Job.Location.Road" class="form-control form-control-lg" placeholder="Road name" required>
            <input asp-for="Job.Location.Number" class="form-control form-control-lg" placeholder="House number" required>
            <input asp-for="Job.Location.Zip" class="form-control form-control-lg" placeholder="Postal code" required>
        </div>
        <div class="form-group pt-3">
            <label asp-for="Job.Description">Description</label>
            <textarea asp-for="Job.Description" class="form-control form-control-lg" placeholder="Describe the task..." rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-lg btn-success mt-5">Create Task</button>
    </form>
</div>