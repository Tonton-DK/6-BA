@page
@model ViewContractModel

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    @if (Model.ValidContract)
    {
    <div class="row mt-2">
        <div class="col col-12 col-md-6 mt-3 text-lg-start">
            <div class="fw-bold">TITLE GOES HERE</div>
            <div>Job description: JOB DESCRIPTION GOES HERE</div>
        </div>
        <div class="col col-12 col-md-6 mt-3 text-lg-end">
            <div class="text-muted">Deadline: </div>
            <div class="text-muted">Price: </div>
            <div class="text-muted">Location: </div>
        </div>
    </div>
    <div class="mt-3">
        <div class="fs-4">Job Status</div>
        <div class="fs-5 fw-bold mt-2"></div>
    </div>
    <div class="row mt-4">
        <div class="col col-12 col-md-6">
            <div class="contract-card-wrapper">
                <div class="mb-2"><h5 class="fs-4">Client</h5></div>
                <div class="h-100"><img src="/IMAGE" alt="Task owner" class="profile-picture contract-card-img" width="150" height="150">
                    <div class="card contract-card">
                        <div class="card-body">
                            <div class="fs-4">CLIENT NAME</div>
                            <div class="mt-2">RATING</div>
                            <a asp-page="/ViewUser" asp-route-jobId="" class="btn btn-success mb-3 mx-auto">View profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6">
            <div class="contract-card-wrapper">
                <div class="mb-2"><h5 class="fs-4">Provider</h5></div>
                <div class="h-100"><img src="/IMAGE" alt="Task owner" class="profile-picture contract-card-img" width="150" height="150">
                    <div class="card contract-card">
                        <div class="card-body">
                            <div class="fs-4">PROVIDER NAME</div>
                            <div class="mt-2">RATING</div>
                            <a asp-page="/ViewUser" asp-route-jobId="" class="btn btn-success mb-3 mx-auto">View profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col col-12 col-sm-6">
            <a asp-page="/ViewUser" asp-route-jobId="" class="btn btn-danger mb-3 mx-auto">Cancel job</a>
        </div>
        <div class="col col-12 col-sm-6">
            <a asp-page="/ViewUser" asp-route-jobId="" class="btn btn-success mb-3 mx-auto">Mark as done</a>
        </div>
    </div>
    }
    else
    {
        
    }
</div>