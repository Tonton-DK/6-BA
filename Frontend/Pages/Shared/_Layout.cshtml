<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - I Know A Guy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
    <style>
    @@import url('https://fonts.googleapis.com/css2?family=Lobster&display=swap');
    </style> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">I Know A Guy!</a>
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Post">Create Task</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Find">Find Work</a>
                        </li>
                    </ul>
                </div>
                @*If logged in show burger, else show buttons*@
                <div class="navbar-nav flex-row flex-wrap">
                    <a href="/Login" class="navbar-item btn btn-success me-2">Login</a>
                    <a href="/Create" class="navbar-item btn btn-outline-secondary">Sign up</a>
                </div>
                <div class="navbar-nav flex-row flex-wrap">
                    <label aria-label="Toggle navigation" aria-controls="navbarSupportedContent" for="menu-control" class="navbar-toggler d-block">
                        <span class="navbar-toggler-icon"></span>
                    </label>
                    <input type="checkbox" id="menu-control" class="menu-control d-none">
                    <aside class="sidebar d-flex flex-column box-shadow bg-white">
                        <label aria-controls="navbarSupportedContent" for="menu-control" class="navbar-close" aria-label="Toggle navigation">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-x-lg" viewBox="0 0 16 16" width="30" height="30" fill="#6c757d">
                                <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"></path>
                                <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"></path>
                            </svg>
                        </label>
                        <div class="d-flex flex-column active-profile justify-content-center">
                            <img class="profile-picture" scr="/person.png" width="100" height="100">
                            <span>Logged in as:</span>
                            <span class="profile-name">Placeholder</span>
                        </div>
                        <div class="sidebar-menu nav">
                            <a class="nav-item" href="">View Profile</a>
                            <a class="nav-item" href="">View Inbox</a>
                            <a class="nav-item" href="">My Contracts</a>
                            <a class="nav-item" href="">My Tasks</a>
                            <a class="nav-item" href="">Create Task</a>
                            <a class="nav-item" href="">Find Work</a>
                        </div>
                    </aside>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - I Know A Guy - <a asp-area="" asp-page="/Index">Home</a> - <a asp-area="" asp-page="/About">About</a> - <a asp-area="" asp-page="/Privacy">Privacy</a>  - <a asp-area="" asp-page="/Terms">Terms and Conditions</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>